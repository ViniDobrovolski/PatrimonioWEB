@model SysAplicativo.Models.DbDepartamento

@{
    ViewData["Title"] = "Create";
}

<h1>Criar novo departamento</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomedepartamento" class="control-label">Nome:</label>
                <input asp-for="nomedepartamento" class="form-control" />
                <span asp-validation-for="nomedepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricaodepartamento" class="control-label">Descrição:</label>
                <input asp-for="descricaodepartamento" class="form-control" />
                <span asp-validation-for="descricaodepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idlocal" class="control-label">Local:</label>
                @*Razor *@
    <select asp-items=@ViewBag.Local2 asp-for="idlocal" class= "form-control"></select>
                <span asp-validation-for="idlocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao menu principal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
