@model SysAplicativo.Models.DbLocal

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nomelocal" class="control-label">Nome:</label>
                <input asp-for="nomelocal" class="form-control" />
                <span asp-validation-for="nomelocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricaolocal" class="control-label">Descrição:</label>
                <input asp-for="descricaolocal" class="form-control" />
                <span asp-validation-for="descricaolocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao menu principal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
